<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fridgeFragment"
    tools:context="com.recipe.android.recipeapp.src.fridge.FridgeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fridge_frag_app_logo_iv"
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_recipe_storge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fridge_frag_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneoregular"
            android:textColor="@color/gray_400"
            android:textSize="14sp"
            android:text="21/02/28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/fridge_frag_guideline_left"
            android:layout_marginTop="65dp"/>

        <View
            android:id="@+id/fridge_frag_line_top"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/gray_300"
            app:layout_constraintStart_toStartOf="@id/fridge_frag_guideline_left"
            app:layout_constraintEnd_toEndOf="@id/fridge_frag_guideline_right"
            app:layout_constraintTop_toBottomOf="@id/fridge_frag_app_logo_iv"
            android:layout_marginTop="53dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fridge_frag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle1Style"
            android:text="@string/my_fridge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fridge_frag_line_top"
            android:layout_marginTop="18dp"/>

        <View
            android:id="@+id/fridge_frag_dotted_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="@id/fridge_frag_guideline_left"
            app:layout_constraintEnd_toEndOf="@id/fridge_frag_guideline_right"
            app:layout_constraintTop_toBottomOf="@id/fridge_frag_title"
            android:layout_marginTop="16dp"
            android:background="@drawable/dotted_lines_horizontal"
            android:layerType="software"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fridge_frag_guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fridge_frag_guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>