<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_kakao_sign_in"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_naver_sign_in"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="#6F6380"
        app:layout_constraintEnd_toEndOf="@+id/btn_kakao_sign_in"
        app:layout_constraintStart_toStartOf="@+id/btn_kakao_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_sign_in" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_google_sign_in"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="#C7B6EF"
        app:layout_constraintEnd_toEndOf="@+id/btn_naver_sign_in"
        app:layout_constraintStart_toStartOf="@+id/btn_naver_sign_in"
        app:layout_constraintTop_toBottomOf="@+id/btn_naver_sign_in" />
</androidx.constraintlayout.widget.ConstraintLayout>