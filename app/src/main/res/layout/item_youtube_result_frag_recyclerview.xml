<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/youtube_result_frag_recyclerview_layout">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/youtube_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp"
        style="@style/Subtitle2Style"
        app:layout_constraintEnd_toStartOf="@id/youtube_thumbnail_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="[성공률 100%] 최고의 이탈리안 디저트! 티라미수!"
        android:ellipsize="end"
        android:maxLines="2"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:scaleType="fitXY"
        android:id="@+id/youtube_thumbnail_img"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@color/gray_100"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/youtube_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtube_title_tv"
        android:layout_marginTop="10dp"
        tools:text="2021.3.1"
        style="@style/Caption2Style"
        android:textColor="@color/gray_200"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/youtube_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/youtube_thumbnail_img"
        app:layout_constraintTop_toBottomOf="@id/youtube_post_date"
        tools:text="유투브채널이름"
        style="@style/CaptionStyle"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/youtube_scrap_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_empty_white"
        app:layout_constraintTop_toTopOf="@id/youtube_thumbnail_img"
        app:layout_constraintEnd_toEndOf="@id/youtube_thumbnail_img"
        android:layout_margin="6dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_000"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>